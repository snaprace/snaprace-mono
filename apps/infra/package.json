{
  "name": "@snaprace/infra",
  "version": "1.0.0",
  "private": true,
  "description": "SnapRace AWS CDK Infrastructure",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "synth": "cdk synth",
    "synth:dev": "cdk synth -c stage=dev",
    "synth:staging": "cdk synth -c stage=staging",
    "synth:prod": "cdk synth -c stage=prod",
    "diff": "cdk diff",
    "diff:dev": "cdk diff -c stage=dev",
    "diff:staging": "cdk diff -c stage=staging",
    "diff:prod": "cdk diff -c stage=prod",
    "deploy": "cdk deploy",
    "deploy:dev": "cdk deploy -c stage=dev",
    "deploy:staging": "cdk deploy -c stage=staging",
    "deploy:prod": "cdk deploy -c stage=prod --require-approval broadening",
    "destroy": "cdk destroy",
    "destroy:dev": "cdk destroy -c stage=dev",
    "destroy:staging": "cdk destroy -c stage=staging",
    "bootstrap": "cdk bootstrap",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.ts\""
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "20.11.0",
    "aws-cdk": "^2.150.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "~5.3.3"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.150.0",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21"
  }
}
